<odoo>
    <data>


        <record id="res_config_settings_view_form_frequent" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sale.frequent</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']//div[@name='quotation_order_setting_container']" position="inside">
                     <div class="col-12 col-lg-6 o_setting_box" id="product_matrix">
                        <div class="o_setting_left_pane">
                            <field name="use_approvals_so"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_approvals_so" string="Activate / Deactivate Sales Approvals"/>
                            <div class="text-muted">
                                Activate / Deactivate Sales Approvals
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>